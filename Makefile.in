TARGET=

COMMON_CFLAGS=-c -g -Wall -DDEBUG \
				-I. \
				-I$(TOPDIR)/ftm \
				-I$(TOPDIR)/ftom \
				-I$(TOPDIR)/ftdm \
				-I$(TOPDIR)/ftdm/client \
				-I$(TOPDIR)/ftom/client \
				-I$(TOPDIR)/libconfig-1.4.9/lib \
				-I$(TOPDIR)/net-snmp-5.7.2/include \
				-I$(TOPDIR)/sqlite-3.8.9
COMMON_LDFLAGS=-L. \
				-L$(TOPDIR)/ftm \
				-L$(TOPDIR)/ftdm \
				-L$(TOPDIR)/ftdm/client \
				-L$(TOPDIR)/ftom \
				-L$(TOPDIR)/ftom/client \
				-L$(TOPDIR)/sqlite-3.8.9/.libs \
				-L$(TOPDIR)/mosquitto-1.4.1/lib

ifeq ($(TARGET),"FTM-50S")
CC=armv5-linux-gcc
AR=armv5-linux-ar
CFLAGS=-fPIC $(COMMON_CFLAGS)  -I$(TOPDIR)/devtools/include 
LDFLAGS=-L$(TOPDIR)/devtools/lib $(COMMON_LDFLAGS)
else ifeq ($(TARGET),"FTM-100S")
CC=arm-openwrt-linux-uclibcgnueabi-gcc
AR=arm-openwrt-linux-uclibcgnueabi-ar
CFLAGS=-fPIC \
		$(COMMON_CFLAGS) \
		-I$(TOPDIR)/devtools/include 
eDFLAGS= -L/usr/local/lib $(COMMON_LDFLAGS)
else
CC=gcc
CFLAGS= $(COMMON_CFLAGS) \
		-I/usr/local/include 
LDFLAGS= -L/usr/local/lib $(COMMON_LDFLAGS)
endif
