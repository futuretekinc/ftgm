TARGET=

COMMON_CFLAGS=-c -Wall -DDEBUG -I. -I../ftm -I../ftnm -I../ftdm -I../libconfig-1.4.9/lib -I../net-snmp-5.7.2/include -I../sqlite-3.8.9
COMMON_LDFLAGS=-L../ftm -L../ftdm -L../ftnm -L../sqlite-3.8.9/.libs

ifeq ($(TARGET),"FTM-50S")
CC=armv5-linux-gcc
AR=armv5-linux-ar
CFLAGS=-fPIC $(COMMON_CFLAGS)  -I../devtools/include 
LDFLAGS=-L../devtools/lib $(COMMON_LDFLAGS)
else ifeq ($(TARGET),"FTM-100S")
CC=arm-openwrt-linux-uclibcgnueabi-gcc
AR=arm-openwrt-linux-uclibcgnueabi-ar
CFLAGS=-fPIC \
		$(COMMON_CFLAGS) \
		-I../devtools/include 
LDFLAGS= -L/usr/local/lib $(COMMON_LDFLAGS)
else
CC=gcc
CFLAGS= $(COMMON_CFLAGS) \
		-I/usr/local/include 
LDFLAGS= -L/usr/local/lib $(COMMON_LDFLAGS)
endif
