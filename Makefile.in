#TARGET="FTM-100S"
TARGET=

COMMON_CFLAGS=-c -g -Wall -DDEBUG \
				-I. \
				-I$(TOPDIR)/ftm \
				-I$(TOPDIR)/ftom \
				-I$(TOPDIR)/ftdm \
				-I$(TOPDIR)/ftdm/client \
				-I$(TOPDIR)/ftom/client \
				-I$(TOPDIR)/ftom/cmdline 
COMMON_LDFLAGS=-L. \
			-Wl,--no-as-needed\
				-L$(TOPDIR)/ftm \
				-L$(TOPDIR)/ftdm \
				-L$(TOPDIR)/ftdm/client \
				-L$(TOPDIR)/ftom \
				-L$(TOPDIR)/ftom/client \
				-L$(TOPDIR)/ftom/cmdline 

ifeq ($(TARGET),"FTM-50S")
CC=armv5-linux-gcc
AR=armv5-linux-ar
CFLAGS=-fPIC \
		$(COMMON_CFLAGS)\
		-I$(TOPDIR)/devtools/include 
LDFLAGS=-L$(TOPDIR)/devtools/lib $(COMMON_LDFLAGS)
else ifeq ($(TARGET),"FTM-100S")
CC=arm-openwrt-linux-gnueabi-gcc
AR=arm-openwrt-linux-gnueabi-ar
CFLAGS=-fPIC \
		$(COMMON_CFLAGS) \
		-I$(TOPDIR)/devtools/include \
		-I/home/xtra/ftm/build/_root/include\
		-I/home/xtra/ftm/build/_root/usr/include\
		-I/home/xtra/ftm/build/_root/usr/local/include\
		-I/home/xtra/ftm/build/_root/usr/include/cjson

LDFLAGS= $(COMMON_LDFLAGS)\
		-L/home/xtra/ftm/build/_root/lib \
		-L/home/xtra/ftm/build/_root/usr/lib \
		-L/home/xtra/ftm/build/_root/usr/local/lib \

else
CC=gcc
CFLAGS= $(COMMON_CFLAGS) \
		-I/usr/local/include \
		-I$(TOPDIR)/mosquitto-1.4.8/lib \
		-I$(TOPDIR)/libconfig-1.4.9/lib \
		-I$(TOPDIR)/net-snmp-5.7.2/include \
		-I$(TOPDIR)/sqlite-3.8.9\
		-I$(TOPDIR)/qdecoder-12.0.4/src\
		-I$(TOPDIR)/mxml-2.9\
		-I$(TOPDIR)/cjson

LDFLAGS= -L/usr/local/lib \
		$(COMMON_LDFLAGS)\
		-L$(TOPDIR)/sqlite-3.8.9/.libs \
		-L$(TOPDIR)/mosquitto-1.4.8/lib \
		-L$(TOPDIR)/qdecoder-12.0.4/src \
		-L$(TOPDIR)/mxml-2.9\
		-L$(TOPDIR)/cjson

endif
